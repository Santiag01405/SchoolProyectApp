<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchoolProyectApp.Views"
             x:Class="SchoolProyectApp.Views.FirstProfile"
             Title="Perfil"         
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             droid:NavigationBar.Color="white"
             droid:NavigationBar.Style="LightContent"
             BackgroundColor="{Binding PageBackgroundColor}">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{Binding PageBackgroundColor}"
                               StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <AbsoluteLayout>

       

        <!-- Contenido principal -->
        <ContentView x:Name="MainContent"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">

            <Grid RowDefinitions="Auto,*,Auto">

                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="30" Spacing="25">

                        <!-- Avatar -->
                        <Label Text="&#xf2bd;" Margin="0,30,0,0" FontFamily="FontAwesomeSolid" FontSize="150"
                        HorizontalOptions="Center" TextColor="{Binding PrimaryColor}"/>

                        <!-- Nombre -->
                        <Label Text="{Binding UserName}" 
                               FontSize="27" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,0,0,30"/>

                        <!-- Info Box -->
                        <Frame CornerRadius="12"
                               BackgroundColor="{Binding PrimaryColor}"
                               Padding="20"
                               Margin="0,5"
                               HasShadow="False">

                            <VerticalStackLayout Spacing="20">

                                <VerticalStackLayout>
                                    <Label Text="Correo electrónico" FontAttributes="Bold" FontSize="14" TextColor="{Binding AccentColor}"/>
                                    <Label Text="{Binding Email}" FontSize="16" TextColor="{Binding SecondaryColor}"/>
                                </VerticalStackLayout>

                                <BoxView HeightRequest="1" BackgroundColor="{Binding AccentColor}"/>

                                <VerticalStackLayout>
                                    <Label Text="Cédula" FontAttributes="Bold" FontSize="14" TextColor="{Binding AccentColor}"/>
                                    <Label Text="{Binding Cedula}" FontSize="16" TextColor="{Binding SecondaryColor}"/>
                                </VerticalStackLayout>

                                <BoxView HeightRequest="1" BackgroundColor="{Binding AccentColor}"/>

                                <VerticalStackLayout>
                                    <Label Text="Rol" FontAttributes="Bold" FontSize="14" TextColor="{Binding AccentColor}"/>
                                    <Label Text="{Binding Role}" FontSize="16" TextColor="{Binding SecondaryColor}"/>
                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </Frame>

                        <!-- Botón Cambiar Contraseña -->
                        <Button Text="Cambiar Contraseña"
                                Clicked="OnChangePasswordClicked"
                                BackgroundColor="{Binding AccentColor}"
                                TextColor="{Binding PrimaryColor}"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="50"
                                Margin="0,10">
                            <Button.Shadow>
                            <Shadow Brush="Gray" Opacity="0.2" Offset="0,8" Radius="8" />
                            </Button.Shadow>
                        </Button>

                        <!-- Botón Modificar Datos -->
                        <!--<Button Text="Modificar datos"
                                Command="{Binding NavigateToProfileCommand}"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="50"
                                Margin="0,0,0,30"/>-->
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Barra inferior -->
                <Grid Grid.Row="2" BackgroundColor="WhiteSmoke" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Button Text="&#xf015;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{Binding PrimaryColor}" BackgroundColor="WhiteSmoke" Command="{Binding HomeCommand}" />
                        <Label Text="Inicio" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Button Text="&#xf007;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{Binding PrimaryColor}" BackgroundColor="WhiteSmoke" Command="{Binding FirstProfileCommand}" />
                        <Label Text="Perfil" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Button Text="&#xf0c9;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{Binding PrimaryColor}" BackgroundColor="WhiteSmoke"
                                Clicked="MenuButton_Clicked" />
                        <Label Text="Menú" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>
                </Grid>
            </Grid>
        </ContentView>

        <!-- Menú lateral -->
        <ContentView x:Name="SideMenu"
              WidthRequest="260"
              BackgroundColor="{Binding PrimaryColor}"
              IsVisible="False"
              TranslationX="-260"
              AbsoluteLayout.LayoutBounds="0,0,260,1"
              AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional">
            <local:MenuPage />
        </ContentView>
    </AbsoluteLayout>
</ContentPage>
