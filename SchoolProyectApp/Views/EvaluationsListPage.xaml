<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             xmlns:local="clr-namespace:SchoolProyectApp.Views"
             x:Class="SchoolProyectApp.Views.EvaluationsListPage"
             Title="Ver evaluaciones"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             droid:NavigationBar.Color="white"
             droid:NavigationBar.Style="LightContent"
             BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}">

    <ContentPage.Resources>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{x:Static vm:ThemeColors.PageBackgroundColor}"
                                   StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.BindingContext>
        <vm:EvaluationsListViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>
        <ContentView x:Name="MainContent"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">
            <Grid Padding="0" RowDefinitions="Auto,Auto,*,Auto">
                <Label Grid.Row="0" Text="{Binding PageTitle}"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10"
                       TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>

                <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10" Margin="0,0,0,20">
                    <Button Text="Venideras"
            FontSize="12"
            TextColor="White"
            BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}"
            CornerRadius="20"
            Command="{Binding FilterCommand}"
            CommandParameter="Venideras" />
                    <Button Text="Pasadas"
            FontSize="12"
            TextColor="White"
            BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}"
            CornerRadius="20"
            Command="{Binding FilterCommand}"
            CommandParameter="Pasadas" />
                    <Button Text="Todas"
            FontSize="12"
            TextColor="White"
            BackgroundColor="Gray"
            CornerRadius="20"
            Command="{Binding FilterCommand}"
            CommandParameter="Todas" />
                </StackLayout>

                <CollectionView Grid.Row="2" ItemsSource="{Binding Evaluations}" Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" CornerRadius="10" BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}" BorderColor="{x:Static vm:ThemeColors.PrimaryColor}">
                                <StackLayout>
                                    <Label Text="{Binding Course.Name, TargetNullValue='Sin curso asignado'}" FontSize="Medium" TextColor="{x:Static vm:ThemeColors.SecondaryColor}" />
                                    <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                                    <Label Text="{Binding Description}" FontSize="Small" TextColor="{x:Static vm:ThemeColors.SecondaryColor}"/>
                                    <Label Text="{Binding Date, StringFormat='Fecha de entrega: {0:dd/MM/yyyy}'}" FontSize="Small" TextColor="White" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid Grid.Row="3" BackgroundColor="WhiteSmoke" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Button Text="&#xf015;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" BackgroundColor="WhiteSmoke" Command="{Binding HomeCommand}" />
                        <Label Text="Inicio" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Button Text="&#xf007;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" BackgroundColor="WhiteSmoke" Command="{Binding FirstProfileCommand}" />
                        <Label Text="Perfil" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Button Text="&#xf0c9;" FontFamily="FontAwesomeSolid" FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" BackgroundColor="WhiteSmoke"
                                Clicked="MenuButton_Clicked" />
                        <Label Text="MenÃº" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>
                </Grid>
            </Grid>
        </ContentView>

        <ContentView x:Name="SideMenu"
                     WidthRequest="260"
                     BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}"
                     IsVisible="False"
                     TranslationX="-260"
                     AbsoluteLayout.LayoutBounds="0,0,260,1"
                     AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional">
            <local:MenuPage />
        </ContentView>
    </AbsoluteLayout>
</ContentPage>