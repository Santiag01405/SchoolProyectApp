<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             xmlns:local="clr-namespace:SchoolProyectApp.Views"
             x:Class="SchoolProyectApp.Views.AttendancePage"
             Title="Marcar Asistencia"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             droid:NavigationBar.Color="white"
             droid:NavigationBar.Style="LightContent"
             BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{x:Static vm:ThemeColors.PrimaryColor}"
                                   StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.BindingContext>
        <vm:AttendanceViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>
        <ContentView x:Name="MainContent"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All">

            <Grid Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" Spacing="10" Padding="20">
                    <Label Text="Marcar asistencia"
                           FontAttributes="Bold"
                           TextColor="{x:Static vm:ThemeColors.PrimaryColor}"
                           FontSize="30"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,20"/>

                    <Label Text="Selecciona un curso:"
                           FontAttributes="Bold"
                           TextColor="{x:Static vm:ThemeColors.SecondaryColor}"
                           FontSize="20"
                           Margin="0,10,0,0"/>

                    <Picker ItemsSource="{Binding Courses}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedCourse}" />
                </StackLayout>

                <StackLayout Grid.Row="1" Padding="20">
                    <Label Text="Estudiantes:"
                           FontAttributes="Bold"
                           TextColor="{x:Static vm:ThemeColors.SecondaryColor}"
                           FontSize="20"
                           Margin="0,0,0,0" />

                    <CollectionView ItemsSource="{Binding Students}"
                                    SelectionMode="Single"
                                    SelectedItem="{Binding SelectedStudent}"
                                    HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Padding="10">
                                    <Label Text="{Binding StudentName}" FontSize="16" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <StackLayout Grid.Row="2"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Margin="0,10,0,20"
                             Spacing="10"
                             Padding="20">
                    <Button Text="Presente"
                            BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}"
                            WidthRequest="130"
                            HeightRequest="45"
                            FontSize="18"
                            CornerRadius="10"
                            Command="{Binding MarkPresentCommand}"
                            CommandParameter="{Binding SelectedStudent}" />

                    <Button Text="Ausente"
                            BackgroundColor="{x:Static vm:ThemeColors.DangerColor}"
                            WidthRequest="130"
                            HeightRequest="45"
                            FontSize="18"
                            CornerRadius="10"
                            Command="{Binding MarkAbsentCommand}"
                            CommandParameter="{Binding SelectedStudent}" />
                </StackLayout>

                <Grid Grid.Row="3"
                      BackgroundColor="WhiteSmoke"
                      Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0"
                                 HorizontalOptions="Center">
                        <Button Text="&#xf015;"
                                FontFamily="FontAwesomeSolid"
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}"
                                BackgroundColor="WhiteSmoke"
                                Command="{Binding HomeCommand}" />
                        <Label Text="Inicio"
                               FontSize="10"
                               HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="1"
                                 HorizontalOptions="Center">
                        <Button Text="&#xf007;"
                                FontFamily="FontAwesomeSolid"
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}"
                                BackgroundColor="WhiteSmoke"
                                Command="{Binding FirstProfileCommand}" />
                        <Label Text="Perfil"
                               FontSize="10"
                               HorizontalOptions="Center" />
                    </StackLayout>

                    <StackLayout Grid.Column="2"
                                 HorizontalOptions="Center">
                        <Button Text="&#xf0c9;"
                                FontFamily="FontAwesomeSolid"
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}"
                                BackgroundColor="WhiteSmoke"
                                Clicked="MenuButton_Clicked" />
                        <Label Text="MenÃº"
                               FontSize="10"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Grid>
            </Grid>
        </ContentView>

        <ContentView x:Name="SideMenu"
                     WidthRequest="260"
                     BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}"
                     IsVisible="False"
                     TranslationX="-260"
                     AbsoluteLayout.LayoutBounds="0,0,260,1"
                     AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional">
            <local:MenuPage />
        </ContentView>
    </AbsoluteLayout>
</ContentPage>