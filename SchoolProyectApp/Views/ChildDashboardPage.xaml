<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             x:Class="SchoolProyectApp.Views.ChildDashboardPage"
             Shell.NavBarIsVisible="False"
             x:Name="ThisChildDashboardPage">

	<ContentPage.BindingContext>
		<vm:ChildDashboardViewModel />
	</ContentPage.BindingContext>

	<Grid RowDefinitions="Auto, *">
		<Grid Grid.Row="0" ColumnDefinitions="Auto, *" BackgroundColor="#0C4251" Padding="10">
			<Button Grid.Column="0"
				Text="&#xf060;"
				FontFamily="FontAwesomeSolid" FontSize="24"
				TextColor="White"
				BackgroundColor="Transparent"
				BorderWidth="0"
				Command="{Binding GoBackCommand}"
				VerticalOptions="Center"/>

			<Label Grid.Column="1"
				   Text="{Binding ChildName, StringFormat='Dashboard de {0}'}" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
		</Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15" Padding="20" x:DataType="vm:ChildDashboardViewModel">

                <!-- Horario -->
                <Frame Padding="20" CornerRadius="10" HasShadow="True"
               BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToScheduleCommand}" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="&#xf073;" FontFamily="FontAwesomeSolid" FontSize="40" 
                       HorizontalOptions="Center" TextColor="#0C4251"/>
                        <Label Text="Horario" FontSize="18" FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Evaluaciones -->
                <Frame Padding="20" CornerRadius="10" HasShadow="True"
               BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToEvaluationsCommand}" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="&#xf0f6;" FontFamily="FontAwesomeSolid" FontSize="40" 
                       HorizontalOptions="Center" TextColor="#0C4251"/>
                        <Label Text="Evaluaciones" FontSize="18" FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Calificaciones -->
                <Frame Padding="20" CornerRadius="10" HasShadow="True"
               BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToGradesCommand}" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="&#xf19d;" FontFamily="FontAwesomeSolid" FontSize="40" 
                       HorizontalOptions="Center" TextColor="#0C4251"/>
                        <Label Text="Calificaciones" FontSize="18" FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <!--ACTIVIDADES EXTRACURRICULARES-->
                <Frame Padding="20" CornerRadius="10" HasShadow="True"
       BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToExtraActivitiesCommand}" />
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="&#xf1ae;" FontFamily="FontAwesomeSolid" FontSize="40" 
               HorizontalOptions="Center" TextColor="#0C4251"/>
                        <Label Text="Actividades Extra" FontSize="18" FontAttributes="Bold" 
               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
