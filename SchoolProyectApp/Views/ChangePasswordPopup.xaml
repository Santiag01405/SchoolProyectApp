<?xml version="1.0" encoding="utf-8" ?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SchoolProyectApp.Views.ChangePasswordPopup"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

	<Frame BackgroundColor="White" CornerRadius="0" Padding="20" WidthRequest="300">
		<VerticalStackLayout Spacing="15">

			<Label Text="Contrase単a actual" FontAttributes="Bold" FontSize="16" TextColor="#0C4251"/>
			<Entry x:Name="CurrentPasswordEntry" Placeholder="Ingrese su contrase単a actual" IsPassword="True"/>

			<Label Text="Nueva contrase単a" FontAttributes="Bold" FontSize="16" TextColor="#0C4251"/>
			<Entry x:Name="NewPasswordEntry" Placeholder="Ingrese su nueva contrase単a" IsPassword="True"/>

			<Label x:Name="MessageLabel" TextColor="Red" FontSize="14"/>

			<HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
				<Button Text="Cancelar"
						Clicked="OnCancelClicked"
						WidthRequest="100"
						BackgroundColor="#EEE"
						TextColor="Black"
						FontAttributes="Bold" />

				<Button Text="Guardar"
						Clicked="OnSaveClicked"
						BackgroundColor="#f1c864"
						TextColor="#0C4251"
						FontAttributes="Bold"
						WidthRequest="100"/>
			</HorizontalStackLayout>

		</VerticalStackLayout>
	</Frame>
</toolkit:Popup>

