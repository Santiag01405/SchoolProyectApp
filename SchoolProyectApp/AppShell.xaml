<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:SchoolProyectApp.Views"
       x:Class="SchoolProyectApp.AppShell"
       Shell.FlyoutBehavior="Disabled">

    <!-- Página de Login -->
    <ShellContent Title="Login" Route="login" ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Página de Registro -->
    <ShellContent Title="Registro" Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />

    <!-- Página de Inicio -->
    <ShellContent Title="Inicio" Route="homepage" ContentTemplate="{DataTemplate views:HomePage}" />
    
    <!--Nuevo menu-->
    <ShellContent Title="Menu" Route="menu" ContentTemplate="{DataTemplate views:MenuPage}" />
    
    <!--Perfil del usuario-->
    <ShellContent Title="Perfil" Route="profile" ContentTemplate="{DataTemplate views:ProfilePage}" />
    
    <!--Horario-->
    <ShellContent Title="Horario" Route="schedule" ContentTemplate="{DataTemplate views:SchedulePage}" />

    <!-- Página de Edición del Horario (Solo Teachers) -->
    <ShellContent Title="Editar Horario" Route="editschedule" ContentTemplate="{DataTemplate views:EditSchedulePage}" />


</Shell>


