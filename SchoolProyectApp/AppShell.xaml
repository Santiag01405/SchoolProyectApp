<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:SchoolProyectApp.Views"
       x:Class="SchoolProyectApp.AppShell"
       Shell.FlyoutBehavior="Disabled">

    <!-- Página de Login -->
    <ShellContent Title="Login" Route="login" ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Página de Registro -->
    <ShellContent Title="Registro" Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />

    <!-- Menús según el rol del usuario -->
    <ShellContent Title="Menú Estudiante" Route="studentmenu" ContentTemplate="{DataTemplate views:StudentMenuPage}" />
    <ShellContent Title="Menú Maestro" Route="teachermenu" ContentTemplate="{DataTemplate views:TeacherMenuPage}" />
    <ShellContent Title="Menú Padre" Route="parentmenu" ContentTemplate="{DataTemplate views:ParentMenuPage}" />

</Shell>

