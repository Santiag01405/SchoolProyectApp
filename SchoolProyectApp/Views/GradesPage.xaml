<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             xmlns:local="clr-namespace:SchoolProyectApp.Views"
             x:Class="SchoolProyectApp.Views.GradesPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             droid:NavigationBar.Color="white"
             droid:NavigationBar.Style="LightContent"
             Title="Mis Calificaciones">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#0C4251"
                                   StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <ContentPage.BindingContext>
        <vm:GradesViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>
        <ContentView x:Name="MainContent"
                     AbsoluteLayout.LayoutBounds="0,10,1,0.85"
                     AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">
            <ScrollView>
                <StackLayout Padding="20" Spacing="15">

                    <Label Text="Mis Calificaciones"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#0C4251"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0" />

                    <!-- Promedio general -->
                    <Label Text="{Binding StudentOverallAverage, StringFormat='Promedio General: {0}'}"
                           FontSize="18"
                           TextColor="#0C4251"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0" />

                    <!-- Selector de lapso -->
                    <Picker Title="Selecciona un lapso"
                            ItemsSource="{Binding Lapsos}"
                            SelectedItem="{Binding SelectedLapso}"
                            ItemDisplayBinding="{Binding Nombre}"
                            TextColor="#0C4251"
                            HorizontalOptions="FillAndExpand" />

                    <!-- Promedio del lapso -->
                    <Label Text="{Binding StudentLapsoAverage, StringFormat='Promedio del lapso: {0}'}"
                           FontSize="18"
                           TextColor="#0C4251"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,0,0,0" />

                    <!-- Calificaciones agrupadas por curso -->
                    <CollectionView ItemsSource="{Binding GradesByCourse}" Margin="0,10,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Spacing="10" Padding="0,5,0,5">
                                    <Frame CornerRadius="10" BackgroundColor="#E0F7FA" Padding="15">
                                        <StackLayout>
                                            <Label Text="{Binding Curso}"
                                                   FontAttributes="Bold"
                                                   FontSize="18"
                                                   TextColor="#0C4251" />
                                            <BoxView HeightRequest="1" Color="#0C4251" Margin="0,5" />

                                            <!-- Items del curso -->
                                            <CollectionView ItemsSource="{Binding Calificaciones}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>

                                                        <!-- Dos filas: 1) evaluación + nota, 2) comentario (si hay) -->
                                                        <Grid Padding="5,4" ColumnSpacing="8" RowSpacing="2">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Evaluación -->
                                                            <!-- Evaluación -->
                                                            <Label Grid.Row="0" Grid.Column="0"
       Text="{Binding Evaluacion}"
       TextColor="#0C4251" />

                                                            <!-- ÚNICO: nota (numérica o texto) -->
                                                            <Label Grid.Row="0" Grid.Column="1"
       Text="{Binding DisplayGrade}"
       TextColor="#0C4251"
       FontAttributes="Bold"
       HorizontalTextAlignment="End"
       HorizontalOptions="End" />


                                                            <!-- Comentarios (si hay texto, ocupa altura; si no, no ocupa espacio) -->
                                                            <Label Grid.Row="1" Grid.ColumnSpan="2"
                                                                   Text="{Binding Comments}"
                                                                   TextColor="#37474F"
                                                                   FontSize="13" />
                                                        </Grid>

                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </ContentView>

        <!-- Menú lateral -->
        <ContentView x:Name="SideMenu"
                     WidthRequest="260"
                     BackgroundColor="#0C4251"
                     IsVisible="False"
                     TranslationX="-260"
                     AbsoluteLayout.LayoutBounds="0,0,260,1"
                     AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional">
            <local:MenuPage />
        </ContentView>

        <!-- Barra inferior -->
        <Grid BackgroundColor="WhiteSmoke" Padding="10"
              AbsoluteLayout.LayoutBounds="0,1,1,80"
              AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                <Button Text="&#xf015;" FontFamily="FontAwesomeSolid" FontSize="24"
                        TextColor="#0C4251" BackgroundColor="WhiteSmoke" Command="{Binding HomeCommand}" />
                <Label Text="Inicio" FontSize="10" HorizontalOptions="Center" />
            </StackLayout>

            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                <Button Text="&#xf007;" FontFamily="FontAwesomeSolid" FontSize="24"
                        TextColor="#0C4251" BackgroundColor="WhiteSmoke" Command="{Binding FirstProfileCommand}" />
                <Label Text="Perfil" FontSize="10" HorizontalOptions="Center" />
            </StackLayout>

            <StackLayout Grid.Column="2" HorizontalOptions="Center">
                <Button Text="&#xf0c9;" FontFamily="FontAwesomeSolid" FontSize="24"
                        TextColor="#0C4251" BackgroundColor="WhiteSmoke"
                        Clicked="MenuButton_Clicked" />
                <Label Text="Menú" FontSize="10" HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </AbsoluteLayout>
</ContentPage>
    