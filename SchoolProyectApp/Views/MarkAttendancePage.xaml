<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchoolProyectApp.ViewModels"
             xmlns:views="clr-namespace:SchoolProyectApp.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:droid="clr-namespace:CommunityToolkit.Maui.PlatformConfiguration.AndroidSpecific;assembly=CommunityToolkit.Maui"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             x:Class="SchoolProyectApp.Views.MarkAttendancePage"
             Title="Marcar Asistencia"
             droid:NavigationBar.Color="{x:Static vm:ThemeColors.PageBackgroundColor}"
             droid:NavigationBar.Style="LightContent"
             BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}">

    <ContentPage.BindingContext>
        <local:MarkAttendanceViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{x:Static vm:ThemeColors.PrimaryColor}"
                                   StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <AbsoluteLayout>
        <ContentView x:Name="MainContent"
                     AbsoluteLayout.LayoutBounds="0,110,1,0.85"
                     AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional">

            <Grid Padding="0" RowDefinitions="*,Auto">
                <StackLayout Grid.Row="0" Padding="20" Spacing="15">
                    <Label Text="Marcar Asistencia" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}" 
                                       HorizontalOptions="CenterAndExpand" 
                                       VerticalOptions="CenterAndExpand" 
                                       Color="{x:Static vm:ThemeColors.AccentColor}" />
                    <Frame CornerRadius="10" 
                           Padding="10" 
                           BorderColor="{x:Static vm:ThemeColors.PrimaryColor}" 
                           HasShadow="True">
                        <Picker Title="Selecciona una Actividad" 
                                ItemsSource="{Binding Activities}" 
                                ItemDisplayBinding="{Binding Name}" 
                                SelectedItem="{Binding SelectedActivity}" />
                    </Frame>
                    <CollectionView ItemsSource="{Binding Students}" Margin="0,10,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10" 
                                       Margin="0,5" 
                                       Padding="15" 
                                       BorderColor="{x:Static vm:ThemeColors.PrimaryColor}" 
                                       HasShadow="True">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <Label Grid.Column="0" 
                                               Text="{Binding StudentName}" 
                                               FontSize="16" 
                                               VerticalOptions="Center"
                                               TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>
                                        <Switch Grid.Column="1" 
                                                IsToggled="{Binding IsPresent}" 
                                                VerticalOptions="Center"
                                                OnColor="{x:Static vm:ThemeColors.AccentColor}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Guardar Asistencia" 
                            Command="{Binding SaveAttendanceCommand}" 
                            CornerRadius="10" 
                            Margin="0,20,0,0" 
                            BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" 
                            TextColor="{x:Static vm:ThemeColors.TextColor}" 
                            FontSize="18"
                            VerticalOptions="EndAndExpand"/>
                </StackLayout>

                <Grid Grid.Row="1" 
                      BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}" 
                      Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0" HorizontalOptions="Center">
                        <Button Text="&#xf015;" 
                                FontFamily="FontAwesomeSolid" 
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" 
                                BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}" 
                                Command="{Binding HomeCommand}" />
                        <Label Text="Inicio" 
                               FontSize="10" 
                               HorizontalOptions="Center"
                               TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1" HorizontalOptions="Center">
                        <Button Text="&#xf007;" 
                                FontFamily="FontAwesomeSolid" 
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" 
                                BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}" 
                                Command="{Binding FirstProfileCommand}" />
                        <Label Text="Perfil" 
                               FontSize="10" 
                               HorizontalOptions="Center" 
                               TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>
                    </StackLayout>

                    <StackLayout Grid.Column="2" HorizontalOptions="Center">
                        <Button Text="&#xf0c9;" 
                                FontFamily="FontAwesomeSolid" 
                                FontSize="24"
                                TextColor="{x:Static vm:ThemeColors.PrimaryColor}" 
                                BackgroundColor="{x:Static vm:ThemeColors.PageBackgroundColor}"
                                Clicked="MenuButton_Clicked" />
                        <Label Text="MenÃº" 
                               FontSize="10" 
                               HorizontalOptions="Center"
                               TextColor="{x:Static vm:ThemeColors.PrimaryColor}"/>
                    </StackLayout>
                </Grid>
            </Grid>
        </ContentView>

        <ContentView x:Name="SideMenu"
                     WidthRequest="260"
                     BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}"
                     IsVisible="False"
                     TranslationX="-260"
                     AbsoluteLayout.LayoutBounds="0,0,260,1"
                     AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional">
            <views:MenuPage />
        </ContentView>
    </AbsoluteLayout>
</ContentPage>