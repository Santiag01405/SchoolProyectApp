<?xml version="1.0" encoding="UTF-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SchoolProyectApp.ViewModels"
             x:Class="SchoolProyectApp.Views.MenuPage"
             BackgroundColor="{x:Static vm:ThemeColors.PrimaryColor}">

    <ContentView.BindingContext>
        <vm:MenuViewModel />
    </ContentView.BindingContext>

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <StackLayout Padding="20" Spacing="25">

                <StackLayout Orientation="Horizontal" Padding="5" Margin="0,30,0,0">
                    <Label Text="&#xf2f5;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Cerrar sesión" Command="{Binding LogoutCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsStudent}">
                    <Label Text="&#xf073;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Horario" Command="{Binding ScheduleCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsStudent}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsHiddenForStudent}">
                    <Label Text="&#xf0f3;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Notificaciones" Command="{Binding NotificationCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsHiddenForStudent}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf1d8;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Enviar mensaje" Command="{Binding SendNotificationCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf044;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Crear evaluación" Command="{Binding CreateEvaluationCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf328;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Marcar asistencia" Command="{Binding AttendanceCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf091;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Asignar calificacion" Command="{Binding AssingGradeCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf055;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Crear extracurricular" Command="{Binding CreateExtraCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf234;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Inscribir a extracurricular" Command="{Binding EnrollExtraCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsProfessor}">
                    <Label Text="&#xf0ae;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Asistencia extracurricular" Command="{Binding MarkExtraAttendanceCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsProfessor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsStudent}">
                    <Label Text="&#xf15c;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Evaluaciones" Command="{Binding EvaluationCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsStudent}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsStudent}">
                    <Label Text="&#xf5a2;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Ver calificaciones" Command="{Binding SeeGradesCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsStudent}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsStudent}">
                    <Label Text="&#xf541;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Extracurriculares" Command="{Binding SeeExtraCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsStudent}" />

                <StackLayout Orientation="Horizontal" Padding="5">
                    <Label Text="&#xf007;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Perfil" Command="{Binding FirstProfileCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" />

                <StackLayout Orientation="Horizontal" Padding="5" IsVisible="{Binding IsNurse}">
                    <Label Text="&#xf479;" FontSize="24" FontFamily="FontAwesomeSolid" TextColor="{x:Static vm:ThemeColors.AccentColor}" Margin="0,0,18,0" />
                    <Button Text="Visita al psicólogo" Command="{Binding NurseVisitCommand}" TextColor="{x:Static vm:ThemeColors.TextColor}" BackgroundColor="Transparent" Padding="0" />
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="{x:Static vm:ThemeColors.SecondaryColor}" IsVisible="{Binding IsNurse}" />

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentView>